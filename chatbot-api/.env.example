# AI API Keys
GOOGLE_API_KEY=your_google_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# CORS Settings (for production, specify actual frontend domains)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database/Vector Store Settings
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Model Settings
DEFAULT_LLM_MODEL=gemini/gemini-2.0-flash
LLM_TEMPERATURE=0.7

# Embedding Settings
# Using Google's text-embedding-004 model via API
# Dimensions: 768
# Cost: ~$0.00001 per 1K tokens (very affordable for testing)

# Chat Settings
MAX_CHAT_HISTORY=10
MAX_CONTEXT_RESULTS=3
